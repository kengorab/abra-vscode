{
  "name": "abra",
  "displayName": "Abra",
  "description": "Official extension for the Abra programming language",
  "publisher": "kengorab",
  "version": "0.0.2",
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./client/out/extension",
  "activationEvents": [
    "onLanguage:abra"
  ],
  "contributes": {
    "languages": [
      {
        "id": "abra",
        "aliases": [
          "Abra",
          "abra"
        ],
        "extensions": [
          ".abra"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "abra",
        "scopeName": "source.abra",
        "path": "./syntaxes/abra.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Abra",
      "properties": {
        "abra.lspPath": {
          "type": "string",
          "default": null,
          "description": "Path to the `abra-lsp` binary to use. By default, the extension will use the version bundled with it, but this may be useful for overriding"
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^14.14.19",
    "typescript": "^4.1.3"
  }
}
